  },
  "devDependencies": {
    "@skpm/builder": "<1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.0.0",
    "typescript": "^5.0.2"
  }
}
